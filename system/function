#!/usr/bin/env zsh
pidByPort()
{
   echo `ss -tnlp  | grep "${1}" | grep -Po "pid=\K\d+"`
}

cdbg()
{
    FOUND=1
    CURRENT_DIR="$PWD"
    while [ ! -f "${CURRENT_DIR}/build.gradle" ]; do
        CURRENT_DIR="${CURRENT_DIR}/.."
        if [ ! -d "$CURRENT_DIR" ]; then
            echo "No build.gradle found in hierachy"
            FOUND=0
            break
        fi
    done
    [ "$FOUND" -eq 1 ] && cd "$CURRENT_DIR"
}

gidi()
{
    git diff --relative --name-only --diff-filter=d | fzf --preview 'bat {-1} --diff --color=always'
}

wttr()
{
    curl 'https://wttr.in/Paderborn?m&lang=de'
}
